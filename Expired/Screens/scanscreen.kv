<ScanScreen>:
    selected_date: date_label
    pressed_ok:funSpinner
    itemTextInput:itemName
    # MNavigationBar:

    MDSpinner:
        id: funSpinner
        size_hint: (.1,.1)
        pos_hint: {'center_x': .5, 'center_y': .25}
        active: False
    BoxLayout:
        pos_hint: {'center_x': .5, 'top': .95}
        # size_hint: (1,.5)
        size_hint: (1,.7)
        Preview:
            id: preview
	        aspect_ratio: '16:9'
    Toolbar:
        title: "Scan"
    MDFillRoundFlatIconButton:
        icon: "magnify-scan"
        text: "Scan image"
        pos_hint: {'center_x': .5, 'center_y': .30}
        on_release: root.photo()
        # theme_text_color: "Custom"
        # text_color: 0, 0, 1, 1
        # line_color: 1, 0, 1, 1
        # theme_icon_color: "Custom"
        # icon_color: 1, 0, 0, 1
    # MDRaisedButton:
    #     text: "Take Photo"
    #     pos_hint: {'center_x': .5, 'center_y': .45}
    #     on_release: root.photo()

    MDFillRoundFlatIconButton:
        id: date_label
        font_size: dp(15)
        icon: "calendar-range"
        text: "Select Expiry Date"
        # pos_hint: {'center_x': .5, 'center_y': .35}
        on_release: root.show_date_picker()
        pos_hint: {'center_x': .75, 'center_y': .17}
    
    FilteredInput:
        id: itemName
        hint_text: "Enter item name"
        multiline: False
        mode: "rectangle"
        theme_text_color: 'Custom'
        color_mode: 'custom'
        # text_color: 0,0,1,1
        # text_color_normal: 0,0,1,1
        # text_color_focus: 0,0,1,1
        color_active: 0,0,0,1
        max_text_length: 5
        size_hint: .35,None
        height: '40dp'
        # pos_hint: {'center_x': .25, 'center_y': .25}
        pos_hint: {'x': .1, 'center_y': .17}
        fill_color: 1,1,1,.1
    # MDRaisedButton:
    #     id: date_label
    #     text: "Select Expiry Date"
    #     # pos_hint: {'center_x': .5, 'center_y': .35}
    #     on_release: root.show_date_picker()
    #     pos_hint: {'center_x': .75, 'center_y': .25}

    # MDLabel:
    #     id:date_label
    #     text:'Select a Date'
    #     halign: 'center'
    #     pos_hint: {'center_x': .75, 'center_y': .25}
    #     font_size: '30dp'
    #     bold: True

    MDFillRoundFlatIconButton:
        id: date_label
        font_size: dp(15)
        icon: "content-save"
        # pos_hint: {'center_x': .5, 'center_y': .35}
        text: "Save Item"
        # pos_hint: {'center_x': .5, 'center_y': .1}
        pos_hint: {'center_x': .5, 'y': .04}
        on_release: root.save_item()
