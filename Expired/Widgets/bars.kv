

# Navigation bar  - manages the screens
<MNavigationBar>:
    panel_color:        app.theme_cls.primary_color  # Background color of nav bar
    text_color_active:  app.theme_cls.primary_light  # Color of active tab icon when 

    HomeScreen:
        id:             menu_tab
        md_bg_color:    app.theme_cls.bg_light
        _parent:        root
        order:          1
        name:           'menu'
        text:           'Menu'
        icon:           'backburger'
        on_tab_press:   root.change_screen("menu")


    ListScreen:
        id:             list_tab
        _parent:        root
        order:          2
        name:           'list'
        text:           'List'
        icon:           'format-list-numbered'
        on_tab_press:   root.change_screen("list")

    ScanScreen:
        id:             scan_tab
        _parent:        root
        order:          3
        name:           'scan'
        text:           'Scan'
        icon:           'camera'
        on_tab_press:   root.change_screen("scan")

    SettingsScreen:
        id:             settings_tab
        _parent:        root
        order:          4
        name:           'settings'
        text:           'Settings'
        icon:           'cog'
        on_tab_press:   root.change_screen("settings")

# The bar at the top of the screen displaying screen name and quit button
<Toolbar@MDToolbar>:
    md_bg_color:        app.theme_cls.primary_color
    size_hint_y:        .08
    pos_hint:           {"top": 1}
    anchor_title:       'center'
    right_action_items: [["close-circle", lambda x: app.stop()]]
